doctype html
html
	head
		
		link(rel='stylesheet' type='text/css' href='css/restaurant.css')
		script(src='js/restaurant.js')
		script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js")
		link(href='https://fonts.googleapis.com/css?family=Julius+Sans+One|Monoton|Sintony:400,700', rel='stylesheet')


		title Restaurants
	body
		div(class='container')
			div(class='menu')
				ul
					li(class='add')
						a(href='/') Add
					li(class='search') 	
						h1 GLUNO
						form(action='/search', method='post', autocomplete='off')
						input(type='text', name='search', placeholder='Search on restaurant name or city' style='width: 300px' value=search)
						button(type='submit', name='submit') Search
					li(class='rest') 
						a(href='/restaurants') Restaurants


		div(class='info-container')
			div(class='info')
				h2 <img src='../img/naam-k.png'> &nbsp <b>#{restaurant.Name}</b>
				p <img src='../img/map-k.png'> &nbsp &nbsp #{restaurant.Address}, #{restaurant.City}
				p <img src='../img/web-k.png'> &nbsp &nbsp <a class='website' href='#{restaurant.Website}' target='_blank'>#{restaurant.Website}</a>
				p <img src='../img/info-k.png'> &nbsp &nbsp #{restaurant.Description}

		div(class='rating')
			h2 Rating: 
		

		div(id='floating-panel')

			input#address(type='textbox', value=restaurant.Address)
		div(id='map')
		
		div(class='reviewForm')
			form(action='/restaurant', method='post', autocomplete='off')
				input(type='text', name='name', placeholder='Your Name', style='width: 200px')
				br
				textarea(type='text', name='info', placeholder='e.g. Were there a lot of options? Quality of the glutenfree food?', style='width: 200px; height: 70px')
				br
				p Your Rating:
				input(type='text', name='rating', placeholder='1 t/m 10', style='width: 50px')
				button(type='submit', value='Submit Restaurant') Add your review

